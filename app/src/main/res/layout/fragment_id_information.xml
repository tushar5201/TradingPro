<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".HomeActivity"
    android:paddingHorizontal="15dp"
    android:layout_marginTop="50dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID Information"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins"
        android:layout_gravity="start"
        android:textColor="@color/primary_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/camera_svg"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Take photo"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="17sp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/yellow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Snap to it! Tap and capture your"
            android:textSize="17sp"
            android:textColor="@color/desc_text"
            android:layout_marginTop="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="famulous docs"
            android:textSize="17sp"
            android:textColor="@color/desc_text" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Upload Your ID Card"
        android:fontFamily="@font/poppins"
        android:textSize="18sp"
        android:layout_gravity="start"
        android:textColor="@color/primary_text"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Upload a clear photo of your PAN card"
        android:textSize="17sp"
        android:textColor="@color/desc_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Max size 2MB)"
        android:textSize="17sp"
        android:textColor="@color/desc_text"
        />

    <RelativeLayout
        android:layout_width="410dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/ib2"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/upload_svg"
            android:layout_marginStart="60dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:text="Upload front"
            android:fontFamily="@font/poppins"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/yellow"
            android:layout_below="@id/ib2"/>
    </RelativeLayout>
</LinearLayout>