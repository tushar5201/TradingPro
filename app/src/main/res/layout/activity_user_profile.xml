<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.UserProfileActivity"
    android:background="@color/bg_color"
    >

    <LinearLayout
        android:id="@+id/backLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profileBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/primary_text"
            android:textSize="17sp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="15sp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/primary_text"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/backLinear"
        />


    <TextView
        android:id="@+id/profileUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIDHANSHU"
        android:textSize="15sp"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/desc_text"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/backLinear"
        />

    <TextView
        android:id="@+id/profilePhonTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:textSize="15sp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/primary_text"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/profileUserName"
        />

    <TextView
        android:id="@+id/profilePhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9016668632"
        android:layout_below="@+id/profileUserName"
        android:layout_marginTop="25dp"
        android:textSize="15sp"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/desc_text"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="15sp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/primary_text"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/profilePhonTv"/>

    <TextView
        android:id="@+id/profileEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="abc@gmail.com"
        android:layout_below="@+id/profilePhone"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/desc_text"
        android:layout_alignParentEnd="true"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mpin"
        android:textSize="15sp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/primary_text"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/profileEmail"/>

    <TextView
        android:id="@+id/profileMpin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234"
        android:layout_below="@+id/profileEmail"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/desc_text"
        android:layout_alignParentEnd="true"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fingerprint"
        android:textSize="15sp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/primary_text"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/profileMpin"/>

    <TextView
        android:id="@+id/profileFingerprint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable"
        android:layout_below="@+id/profileMpin"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/desc_text"
        android:layout_alignParentEnd="true"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="15sp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/primary_text"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/profileFingerprint"/>

    <TextView
        android:id="@+id/profilePass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234"
        android:layout_below="@+id/profileFingerprint"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/desc_text"
        android:layout_alignParentEnd="true"
        android:textSize="15sp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnProfileEdit"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Edit Profile"
        app:cornerRadius="10dp"
        android:textSize="17sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/secondary_text"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/btnProfileDel"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnProfileDel"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Delete Account"
        app:backgroundTint="#EBEBEB"
        android:textSize="17sp"
        android:textColor="@color/red"
        android:fontFamily="@font/poppins_medium"
        app:cornerRadius="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>