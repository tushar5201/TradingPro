<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignupProcessFragment.DisclaimerFragment"
    android:orientation="vertical"
    android:paddingHorizontal="15dp"
    android:paddingVertical="30dp"
    android:id="@+id/main"
    android:background="@color/bg_color">

   <TextView
       android:id="@+id/txtDisclaimer"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Disclaimer"
       android:textSize="20sp"
       android:textStyle="bold"
       android:fontFamily="@font/poppins"
       android:textColor="@color/primary_text"/>

    <TextView
        android:id="@+id/txtdesc"
        android:layout_below="@id/txtDisclaimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="This virtual stock app is designed for educational and informational purposes only. The app simulates stock trading and does not involve real money transactions. The information provided is not guaranteed to be accurate, complete, or up-to-date, and it does not constitute financial advice. Users should seek professional financial advice before making any investment decisions. \n\n\t\tThe creators of this app are not responsible for any losses or damages resulting from the use of this app. By using this app, you acknowledge and agree to this disclaimer."
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/desc_text"/>

    <CheckBox
        android:id="@+id/chkAgree"
        android:layout_below="@id/txtdesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agree &amp; Continue"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppins_light"
        android:textSize="15sp"
        android:textColor="@color/desc_text"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="0.5"
            android:backgroundTint="@color/desc_text"
            android:fontFamily="@font/poppins"
            android:text="@string/backNext"
            android:textColor="@color/secondary_text"
            android:textSize="17sp"
            android:textStyle="bold"
            app:cornerRadius="10dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinue"
            android:layout_marginStart="10dp"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="0.5"
            android:backgroundTint="@color/yellow"
            android:fontFamily="@font/poppins"
            android:text="@string/continueNext"
            android:textColor="@color/secondary_text"
            android:textSize="17sp"
            android:textStyle="bold"
            app:cornerRadius="10dp" />

    </LinearLayout>

</RelativeLayout>